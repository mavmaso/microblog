<h1>Index dos Artigos</h1>

<%= link_to 'Novo Artigo', new_article_path %>
<br>
<table class='table table-hover'>
  <tr>
    <th>Titulo</th>
    <th>Descricao</th>
  </tr>

  <% @articles.each do |article| %>
  <tr>
    <td><%= article.title %></td>
    <td><%= article.description %></td>
    <td><%= link_to 'Editar', edit_article_path(article) %></td>
    <td><%= link_to 'Show', article_path(article) %></td>
    <td><%= link_to 'Apagar', article_path(article), method: :delete, data: {confirm: 'Tem certeza ?'} %></td>
  </tr>
  <% end %>
</table>