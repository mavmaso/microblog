<h1 align='center'>Todos os usuarios</h1>
<div align="center">
  <%= will_paginate @articles, renderer: BootstrapPagination::Rails %>
  <% @users.each do |user| %>
    <ul class="listing">
      <div class="row">
        <div class="well col-md-4 col-md-offset-4">
          <li><%= link_to gravatar_for(user), user_path(user) %></li>
          <li class="article-title"><%= link_to user.username, user_path(user) %></li>
          <li><small>Numero de artigos: <%= user.articles.count %></small></li>
          <% if logged_in? and current_user.admin? %>
            <li><%= link_to 'Apagar Usuario', user_path(user), method: :delete,
            data: { confirm: 'Tem certeza quer apagar o usuario e seus artigos ?'} %></li>
          <% end %>
        </div>
      </div>
    </ul>
  <% end %>
  <%= will_paginate @articles, renderer: BootstrapPagination::Rails %>
</div>