<%= render 'shared/errors', obj: @category %>

<%= form_for(@category, :html => {class: 'form-horizontal', role: 'form'}) do |f| %>
  <div class="form-group">
    <div class="control-label col-sm-2">
      <%= f.label :name,'Nome' %>
    </div>
    <div class="col-sm-8">
      <%= f.text_field :name, class: "form-control", placeholder: "Nome da categoria", autofocus: true %>
    </div>
  </div>
  <div class='form-group'>
    <div class='col-sm-offset-2 col-sm-10'>
      <%= f.submit 'Enviar', class:'btn btn-primary btn-lg' %>
    </div>
  </div>
<% end %>